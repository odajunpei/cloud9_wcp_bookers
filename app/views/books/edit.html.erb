<h1>Editing Book</h1>
<% if !flash[:errors_msgs].blank? %>
     <h2><%= flash[:errors_msgs].count %> errors prohibited this book from being saved:</h2>
     <ul>
        <% flash[:errors_msgs]. each do |errors_msgs|  %>
        <li><%= errors_msgs %></li>
        <% end %>
     </ul>
<% end %>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div>
    <%= f.submit 'Update Book' %></div>
    <div>

    <%= link_to "show", book_path(@book) %>
    |
    <%= link_to "Back", books_path %>
    </div>

<% end %>